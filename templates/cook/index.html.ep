% layout 'default';
% title 'Edit Dashboard';

<div class="cook-dashboard">
    <h1>Edit Dashboard</h1>

    % if (flash 'success') {
        <div class="alert alert-success"><%= flash 'success' %></div>
    % }
    % if (flash 'error') {
        <div class="alert alert-error"><%= flash 'error' %></div>
    % }

    <div class="cook-section">
        %= include 'partials/_recipe_edit_table', recipe_base_url => '/cook/recipe', show_status_controls => 1
    </div>
</div>
